{
    "name": "wp-rest-auth/jwt",
    "description": "Simple, secure JWT authentication for WordPress REST API",
    "type": "wordpress-plugin",
    "keywords": ["wordpress", "jwt", "authentication", "rest-api", "spa", "mobile"],
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "WordPress Developer",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "wp-phpunit/wp-phpunit": "^6.0",
        "yoast/phpunit-polyfills": "^1.0",
        "wp-coding-standards/wpcs": "^3.0",
        "squizlabs/php_codesniffer": "^3.10"
    },
    "autoload": {
        "psr-4": {
            "WPRESTAuthJWT\\": "includes/"
        }
    },
    "scripts": {
        "lint": "phpcs -d memory_limit=512M --standard=WordPress --extensions=php . --ignore=vendor,node_modules",
        "lint-fix": "phpcbf -d memory_limit=512M --standard=WordPress --extensions=php . --ignore=vendor,node_modules"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "platform": {
            "php": "7.4.0"
        }
    }
}
