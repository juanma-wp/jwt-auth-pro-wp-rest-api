{
  "name": "jwt-auth-pro-wp-rest-api/secure-refresh-tokens",
  "description": "Modern JWT authentication with refresh tokens for WordPress REST API - built for SPAs and mobile apps",
  "type": "wordpress-plugin",
  "keywords": [
    "wordpress",
    "jwt",
    "authentication",
    "rest-api",
    "spa",
    "mobile",
    "refresh-tokens",
    "security",
    "oauth2",
    "modern"
  ],
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "WordPress Developer",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.4",
    "wp-rest-auth/auth-toolkit": "dev-main"
  },
  "repositories": [
    {
      "type": "path",
      "url": "../wp-rest-auth-toolkit",
      "options": {
        "symlink": false
      }
    }
  ],
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "wp-phpunit/wp-phpunit": "^6.0",
    "yoast/phpunit-polyfills": "^1.0",
    "wp-coding-standards/wpcs": "^3.1",
    "squizlabs/php_codesniffer": "^3.12",
    "phpstan/phpstan": "^1.10",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "phpcsstandards/phpcsutils": "^1.1",
    "phpcsstandards/phpcsextra": "^1.4",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.1",
    "behat/behat": "^3.14"
  },
  "autoload": {
    "psr-4": {
      "JWTAuthPro\\": "includes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "": "tests/behat/bootstrap/"
    }
  },
  "scripts": {
    "lint": "phpcs -d memory_limit=512M",
    "lint-fix": "phpcbf -d memory_limit=512M",
    "phpstan": "vendor/bin/phpstan analyse --memory-limit=512M",
    "phpstan-baseline": "vendor/bin/phpstan analyse --generate-baseline --memory-limit=512M",
    "behat": "vendor/bin/behat",
    "behat-init": "vendor/bin/behat --init"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "platform": {
      "php": "7.4.0"
    }
  }
}
