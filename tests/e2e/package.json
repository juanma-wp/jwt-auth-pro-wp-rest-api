{
  "name": "jwt-auth-e2e-tests",
  "version": "1.0.0",
  "description": "E2E tests for JWT authentication with multi-domain and protocol testing",
  "private": true,
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:same-domain": "playwright test --project=same-domain-*",
    "test:cross-origin": "playwright test --project=cross-origin-*",
    "test:protocol-matrix": "playwright test --project=protocol-matrix",
    "test:firefox": "playwright test --project=firefox-*",
    "test:webkit": "playwright test --project=webkit-*",
    "test:chrome-only": "playwright test --project=same-domain-* --project=cross-origin-http --project=cross-origin-https --project=protocol-matrix",
    "report": "playwright show-report",
    "docker:up": "cd docker && docker compose up -d",
    "docker:down": "cd docker && docker compose down -v",
    "docker:logs": "cd docker && docker compose logs -f",
    "docker:restart": "npm run docker:down && npm run docker:up",
    "setup": "npm run docker:up && sleep 30 && npm run setup:wordpress",
    "setup:wordpress": "node scripts/setup-wordpress.js",
    "test:local": "npm run setup && npm test && npm run docker:down"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
